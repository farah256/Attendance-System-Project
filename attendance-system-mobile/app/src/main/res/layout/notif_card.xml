<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_notif"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"

        >

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nom_etudiant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/mada_semibold"
                android:text="Nom Prenom"
                android:textColor="#000000"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="5 Absent"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:chipBackgroundColor="#FF6B6B"
                app:chipCornerRadius="20dp"
                app:chipEndPadding="5dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 JustifiÃ©"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                app:chipBackgroundColor="#8B5CF6"
                app:chipCornerRadius="20dp"
                app:chipEndPadding="12dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/classe_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Classe - Module"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Justification Documents Section -->


    </LinearLayout>

</androidx.cardview.widget.CardView>

